@{
    ViewData["Title"] = "Profile";
}
@model ZaiEats.Models.ApplicationUser
<div class="container mt-12 px-4 py-8" style="opacity: 1; transform: none;">
    <!-- Page Heading -->
    <h1 class="text-2xl font-semibold text-center mb-2 tracking-wide">Profile</h1>

    <!-- Profile Icon -->
    <div class="flex justify-center mb-6">
        <div style="opacity: 1; transform: none;">
            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 496 512"
                 class="text-neutral-400" height="50" width="50" xmlns="http://www.w3.org/2000/svg">
                <path d="M248 8C111 8 0 119 0 256s111 248 248 248
                        248-111 248-248S385 8 248 8zm0 96c48.6
                        0 88 39.4 88 88s-39.4 88-88
                        88-88-39.4-88-88 39.4-88
                        88-88zm0 344c-58.7 0-111.3-26.6-146.5-68.2
                        18.8-35.4 55.6-59.8 98.5-59.8
                        2.4 0 4.8.4 7.1 1.1 13 4.2
                        26.6 6.9 40.9 6.9 14.3 0 28-2.7
                        40.9-6.9 2.3-.7 4.7-1.1
                        7.1-1.1 42.9 0 79.7 24.4
                        98.5 59.8C359.3 421.4 306.7
                        448 248 448z">
                </path>
            </svg>
        </div>
    </div>

    <!-- Personal Information -->
    <div class="border border-white p-6 rounded-xl shadow-xl" style="opacity: 1; transform: none;">
        <h2 class="text-lg font-semibold">Personal Information</h2>
        <p class="mt-2 text-sm text-neutral-400">First Name: @ViewBag.firstName</p>
        <p class="mt-2 text-sm text-neutral-400">Last Name: @ViewBag.lastName</p>
        <p class="mt-2 text-sm text-neutral-400">Phone Number: @Model.PhoneNumber</p>
    </div>

    <!-- Address -->
    <div class="border p-5 rounded-xl shadow-lg mt-6" style="opacity: 1;">
        <h2 class="text-lg font-semibold">Address</h2>
        <button class="text-blue-500/70 text-xs mt-2">Show Address</button>
    </div>

    <!-- Security -->
    <div class="border p-5 rounded-xl shadow-sm mt-6" style="opacity: 1;">
        <h2 class="text-lg font-semibold">Security</h2>
        <button class="text-blue-500/70 text-xs mt-2">Change Password</button>
    </div>

    <!-- Card Details -->
    <div class="border border-white p-6 rounded-xl shadow-sm mt-6" style="opacity: 1;">
        <h2 class="text-lg font-semibold">Card Details</h2>
        <button class="text-blue-500/70 text-xs mt-2">Show Card Details</button>
    </div>

    <!-- Preferences -->
    <div class="border p-5 rounded-xl shadow-sm mt-6" style="opacity: 1;">
        <h2 class="text-lg font-semibold">Preferences</h2>
        <p class="text-sm text-neutral-400 mt-2">Notifications: Enabled</p>
        <p class="mt-3 text-sm text-neutral-400">Language: English</p>

        <!-- Tip Dropdown -->
        <div class="mt-3">
            <label class="text-sm text-neutral-400 block mb-1">Default Tip:</label>
            <select class="text-xs w-20 bg-black border border-neutral-200/20 rounded-xl p-2 text-neutral-400">
                <option value="No Tip">No Tip</option>
                <option value="10%">10%</option>
                <option value="20%">20%</option>
                <option value="30%">30%</option>
            </select>
        </div>
    </div>

    <!-- Logout Button -->
    <div class="mt-10 text-center" style="opacity: 1;">
        <button class="bg-red-800/80 active:bg-red-600 w-full text-white text-sm font-semibold py-2 px-6 rounded-lg transition cursor-pointer" tabindex="0">
            Log Out
        </button>
    </div>
</div>
