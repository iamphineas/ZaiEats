@{
    ViewData["Title"] = "Cart";
}
<div class="container mt-12 px-2 py-10 min-h-screen">
    <h1 class="text-2xl font-bold mb-6 text-center">Your Cart</h1>

    <div class="grid gap-6 lg:grid-cols-3">
        <!-- Cart Items Section -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Cart Item: Zai Burger -->
            <div class="flex items-center justify-between p-4 py-4 shadow-md shadow-neutral-900 rounded-xl transition duration-300">
                <div class="flex items-center space-x-6">
                    <img src="/_next/image?url=%2Fdeal2.jpg&amp;w=256&amp;q=75"
                         alt="Zai Burger"
                         class="object-cover rounded-md"
                         width="80" height="80"
                         style="color: transparent;"
                         loading="lazy"
                         decoding="async" />
                    <div>
                        <p class="text-md font-medium">Zai Burger</p>
                        <p class="text-neutral-500 text-sm">R85</p>
                    </div>
                </div>
                <div class="flex flex-col items-end space-y-2">
                    <p class="text-lg font-semibold">R170</p>
                    <div class="flex items-center space-x-4">
                        <button class="text-xl text-red-600 active:text-red-800 cursor-pointer">-</button>
                        <span class="text-xs font-medium">QTY: 2</span>
                        <button class="text-xl text-green-600 active:text-green-800 cursor-pointer">+</button>
                    </div>
                </div>
            </div>

            <!-- Cart Item: Pizza -->
            <div class="flex items-center justify-between p-4 py-4 shadow-md shadow-neutral-900 rounded-xl transition duration-300">
                <div class="flex items-center space-x-6">
                    <img src="/_next/image?url=%2Fdeal3.png&amp;w=256&amp;q=75"
                         alt="Pizza"
                         class="object-cover rounded-md"
                         width="80" height="80"
                         style="color: transparent;"
                         loading="lazy"
                         decoding="async" />
                    <div>
                        <p class="text-md font-medium">Pizza</p>
                        <p class="text-neutral-500 text-sm">R120</p>
                    </div>
                </div>
                <div class="flex flex-col items-end space-y-2">
                    <p class="text-lg font-semibold">R120</p>
                    <div class="flex items-center space-x-4">
                        <button class="text-xl text-red-600 active:text-red-800 cursor-pointer">-</button>
                        <span class="text-xs font-medium">QTY: 1</span>
                        <button class="text-xl text-green-600 active:text-green-800 cursor-pointer">+</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Divider Line -->
        <div class="w-full h-[1px] bg-yellow-500/50 opacity-10 mt-6"></div>

        <!-- Order Summary -->
        <div class="p-6 rounded-xl shadow-md">
            <!-- Delivery Options -->
            <div class="flex justify-center gap-4 mb-4">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input class="accent-yellow-600" type="radio" name="deliveryOption" value="delivery" checked />
                    <span class="text-sm font-medium">Delivery</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                    <input class="accent-yellow-600" type="radio" name="deliveryOption" value="collection" />
                    <span class="text-sm font-medium">Collection</span>
                </label>
            </div>

            <!-- Summary Details -->
            <h2 class="text-xl font-semibold mb-2">Order Summary</h2>
            <div class="text-sm text-gray-500 mb-4">
                Estimated delivery: <span class="font-medium text-black">40 mins</span>
            </div>
            <div class="flex justify-between mb-2 text-sm">
                <span>Subtotal</span>
                <span>R 290</span>
            </div>
            <div class="flex justify-between mb-2 text-sm">
                <span>Delivery</span>
                <span>R 25</span>
            </div>
            <div class="border-t border-gray-300 my-3"></div>
            <div class="flex justify-between font-bold text-lg">
                <span>Total</span>
                <span>R 315</span>
            </div>

            <!-- Promo Code -->
            <div class="mt-4">
                <input type="text"
                       placeholder="Promo Code"
                       class="w-full p-2 rounded-lg border border-gray-300 text-sm focus:outline-none" />
                <button class="mt-4 w-full py-1 rounded-lg bg-blue-600 text-white active:bg-blue-800 transition">
                    Apply Promo Code
                </button>
            </div>

            <!-- Action Buttons -->
            <button class="mt-8 w-full text-black py-2 rounded-lg bg-yellow-500 active:bg-white active:text-black transition cursor-pointer">
                Browse Restaurants
            </button>
            <button class="mt-6 w-full py-2 rounded-lg bg-green-900/60 text-white active:bg-white active:text-black transition cursor-pointer">
                Proceed to Checkout
            </button>
        </div>
    </div>
</div>
