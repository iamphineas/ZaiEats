@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="flex flex-col lg:flex-row gap-4 lg:gap-6 text-gray-700 mt-4 lg:mt-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="hover:text-blue-600 block" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @User.Identity?.Name!
            </a>
        </li>
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="hover:text-red-600 block text-left w-full">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="hover:text-blue-600 block" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="hover:text-blue-600 block" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
