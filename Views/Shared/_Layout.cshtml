<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZaiEats</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-black">

    <!-- HEADER -->
    <header class="bg-yellow-800 shadow-md">

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative h-16 flex items-center justify-between">

            <!-- Hamburger -->
            <div class="lg:hidden absolute left-3">
                <button id="nav-toggle" class="text-neutral-100 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
                         viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <!-- Logo -->
            <div class="flex-grow text-center lg:text-left">
                <a class="text-xl font-bold tracking-wide text-neutral-100" asp-area="" asp-controller="Home" asp-action="Index">ZaiEats</a>
            </div>

            <!-- Desktop nav -->
            <div class="hidden lg:flex gap-6 items-center">
                <ul class="flex gap-6 text-gray-700">
                    <li><a class="hover:text-blue-600" asp-controller="Home" asp-action="Index">Home</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <!-- BLUR OVERLAY -->
    <div id="nav-overlay" class="lg:hidden fixed inset-0 bg-black/40 backdrop-blur-sm z-40 hidden"></div>

    <!-- SIDEBAR -->
    <div id="nav-menu" class="lg:hidden fixed top-0 left-0 w-64 h-full bg-white shadow-lg transform -translate-x-full transition-transform duration-200 z-50">
        <div class="p-4">
            <button id="nav-close" class="text-gray-700 mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            <ul class="flex flex-col gap-4 text-gray-700 font-medium">
                <li><a class="hover:text-blue-600" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="hover:text-blue-600" href="#">Profile</a></li>
                <li><a class="hover:text-blue-600" href="#">My Orders</a></li>
                <li><a class="hover:text-blue-600" href="#">My Cart</a></li>
                <li><a class="hover:text-blue-600" href="#">Restaurants</a></li>
            </ul>
            <div class="mt-6">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="flex-grow container mx-auto px-4 py-6">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class=" shadow-sm shadow-white text-sm text-gray-500 py-4">
        <div class="max-w-7xl mx-auto px-4 text-center">
            &copy; 2025 - ZaiEats - Developed by WebCraft Solutions
        </div>
    </footer>


    <script>
        const navToggle = document.getElementById("nav-toggle");
        const navMenu = document.getElementById("nav-menu");
        const navOverlay = document.getElementById("nav-overlay");
        const navClose = document.getElementById("nav-close");

        navToggle.addEventListener("click", () => {
            navMenu.classList.remove("-translate-x-full");
            navOverlay.classList.remove("hidden");
        });

        navClose.addEventListener("click", () => {
            navMenu.classList.add("-translate-x-full");
            navOverlay.classList.add("hidden");
        });

        navOverlay.addEventListener("click", () => {
            navMenu.classList.add("-translate-x-full");
            navOverlay.classList.add("hidden");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
