@model IEnumerable<ZaiEats.Models.QuotationRequest>

@{
    ViewData["Title"] = "Quotation Requests";
}

<div class="max-w-4xl mx-auto mt-24 px-4 py-6">
    <h2 class="text-2xl font-bold text-yellow-800 mb-6 text-center">Quotation Requests</h2>

    @if (!Model.Any())
    {
        <div class="text-center text-gray-400 text-sm">
            No quotation requests yet.
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var request in Model)
            {
                <div class="bg-black border border-gray-700 rounded-lg shadow-md p-4">
                    <div class="flex justify-between items-center mb-2">
                        <h3 class="text-lg font-semibold text-yellow-600">@request.FullName</h3>
                        <span class="text-xs px-2 py-1 rounded-full
                            @(request.Status == "Pending" ? "bg-yellow-700" : "bg-green-700")">
                            @request.Status
                        </span>
                    </div>

                    <div class="text-sm text-gray-300">
                        <p><strong>Event:</strong> @request.EventType</p>
                        <p><strong>Guests:</strong> @request.NumberOfGuests</p>
                        <p><strong>Date:</strong> @request.EventDateTime.ToString("yyyy-MM-dd HH:mm")</p>
                        <p><strong>Location:</strong> @request.EventLocation</p>
                    </div>

                    <div class="mt-3 text-right">
                        <a asp-action="Details" asp-route-id="@request.Id"
                           class="inline-block text-sm text-yellow-500 hover:underline">
                            View Details &rarr;
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
