@model ZaiEats.Models.QuotationRequest

@{
    ViewData["Title"] = "Quotation Request Details";
}

<div class="max-w-xl mx-auto mt-24 px-4 py-6 bg-black rounded-xl shadow-sm shadow-white">
    <h2 class="text-2xl font-bold text-yellow-800 mb-6 text-center">Request Details</h2>

    <div class="text-sm text-gray-300 space-y-2">
        <p><strong>Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.MobileNumber</p>
        <p><strong>Event Type:</strong> @Model.EventType</p>
        <p><strong>Guests:</strong> @Model.NumberOfGuests</p>
        <p><strong>Date & Time:</strong> @Model.EventDateTime.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Location:</strong> @Model.EventLocation</p>
        <p><strong>Description:</strong> @Model.EventDescription</p>
        <p>
            <strong>Status:</strong>
            <span class="inline-block px-2 py-1 text-xs rounded-full @(Model.Status == "Pending" ? "bg-yellow-700" : "bg-green-700")">
                @Model.Status
            </span>
        </p>
        <p><strong>Submitted:</strong> @Model.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <!-- Status Update Form -->
    <form asp-action="UpdateStatus" method="post" class="mt-6 space-y-3">
        <input type="hidden" name="id" value="@Model.Id" />
        <div>
            <label for="status" class="text-gray-400 text-sm mb-1">Update Status</label>
            <select name="status" id="status" class="w-full border border-gray-600 rounded-md bg-black text-white px-3 py-1.5">
                <option value="Pending" selected="@("Pending" == Model.Status)">Pending</option>
                <option value="Quotation Sent" selected="@("Quotation Sent" == Model.Status)">Quotation Sent</option>
            </select>
        </div>

        <button type="submit"
                class="w-full py-2 bg-yellow-800 text-white font-semibold rounded-md hover:bg-yellow-700 transition">
            Update Status
        </button>
    </form>

    <div class="mt-4 text-center">
        <a asp-action="Index"
           class="text-sm text-yellow-500 hover:underline">
            &larr; Back to List
        </a>
    </div>
</div>

