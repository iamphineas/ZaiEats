@model dynamic
@{
    ViewData["Title"] = "Menu";
}

<!-- Banner Section -->
<div class="relative w-full h-80">
    <img src="@Model.ImageUrl" alt="@Model.Name"
         class="absolute inset-0 w-full h-full object-cover brightness-50" />

    <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="text-yellow-500 text-lg md:text-3xl font-bold drop-shadow-lg text-center">
            @Model.Name
        </h1>
    </div>
</div>


<!-- View Menu Heading -->
<div class="bg-black py-6 px-4 text-center">
    <h2 class="text-2xl font-bold text-white tracking-wide">Menu</h2>
</div>

<!-- Sticky Category Pills -->
<div class="sticky top-0 z-10 bg-black shadow-sm">
    <div class="flex overflow-x-auto px-4 py-3 space-x-3 scrollbar-hide">
        @foreach (var category in Model.Categories)
        {
            <a href="#cat-@category.Name.Replace(" ", "-")"
               class="bg-yellow-500 text-black rounded-full px-4 py-1.5 text-sm font-medium hover:bg-white hover:text-black transition whitespace-nowrap">
                @category.Name
            </a>
        }
    </div>
</div>

<!-- Menu Section -->
<div class="max-w-6xl mx-auto px-4 py-10 text-white">
    @foreach (var category in Model.Categories)
    {
        <div class="mb-8" id="cat-@category.Name.Replace(" ", "-")">

            @foreach (var item in category.MenuItems)
            {
                <div class="shadow-white rounded-lg p-4 mb-4 shadow-sm">
                    <div class="flex justify-between items-center">
                        <div>
                            <h4 class="text-md font-bold">@item.Name</h4>
                            <p class="text-sm text-gray-400">@item.Description</p>
                            <p class="text-sm text-yellow-300 font-semibold">R @item.Price</p>
                        </div>
                        <img src="@item.ImageUrl" alt="item" class="w-20 h-20 object-cover rounded" />
                    </div>

                    @if (item.Options.Count > 0)
                    {
                        <div class="mt-3 text-sm text-gray-300">
                            <p class="font-medium">Options:</p>
                            <ul class="list-disc list-inside">
                                @foreach (var group in item.Options)
                                {
                                    <li class="mt-1">
                                        <span class="font-semibold">@group.GroupName</span>
                                        (@(group.IsRequired ? "Required" : "Optional"))
                                        <ul class="ml-4">
                                            @foreach (var opt in group.OptionItems)
                                            {
                                                <li>
                                                    - @opt.OptionName
                                                    (@(opt.AdditionalPrice > 0 ? "R" + opt.AdditionalPrice.ToString("0.00") : "Free"))
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<style>
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }

    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
