@model ZaiEats.Models.NewsEvent

@{
    ViewData["Title"] = "Edit News / Event / Special";
}

<div class="max-w-xl mx-auto mt-24 px-4 py-6 rounded-xl shadow-white shadow-sm bg-black">
    <h2 class="text-2xl font-bold text-yellow-800 mb-6 text-center">Edit News / Event / Special</h2>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="space-y-4 text-sm">
        <input type="hidden" asp-for="Id" />

        <!-- Title -->
        <div>
            <label asp-for="Title" class="text-gray-500 font-medium mb-1"></label>
            <input asp-for="Title" class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 text-white bg-transparent" />
            <span asp-validation-for="Title" class="text-red-500 text-xs mt-1 block"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description" class="text-gray-500 font-medium mb-1"></label>
            <textarea asp-for="Description" rows="4" class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 text-white bg-transparent"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-xs mt-1 block"></span>
        </div>

        <!-- Date & Time -->
        <div>
            <label asp-for="EventDateTime" class="text-gray-500 font-medium mb-1"></label>
            <input asp-for="EventDateTime" type="datetime-local"
                   value="@Model.EventDateTime.ToString("yyyy-MM-ddTHH:mm")"
                   class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 text-white bg-black" />
            <span asp-validation-for="EventDateTime" class="text-red-500 text-xs mt-1 block"></span>
        </div>

        <!-- Location -->
        <div>
            <label asp-for="Location" class="text-gray-500 font-medium mb-1"></label>
            <input asp-for="Location" class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 text-white bg-transparent" />
            <span asp-validation-for="Location" class="text-red-500 text-xs mt-1 block"></span>
        </div>

        <!-- Dress Code -->
        <div>
            <label asp-for="DressCode" class="text-gray-500 font-medium mb-1"></label>
            <input asp-for="DressCode" class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 text-white bg-transparent" />
            <span asp-validation-for="DressCode" class="text-red-500 text-xs mt-1 block"></span>
        </div>

        <!-- Category -->
        <div>
            <label asp-for="Category" class="text-gray-500 font-medium mb-1">Type</label>
            <select asp-for="Category" class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 bg-black text-white">
                <option value="News">News</option>
                <option value="Event">Event</option>
                <option value="Special">Special</option>
            </select>
            <span asp-validation-for="Category" class="text-red-500 text-xs mt-1 block"></span>
        </div>

        <!-- Current Image Preview -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div>
                <label class="text-gray-500 font-medium mb-1 block">Current Banner Image</label>
                <img src="@Model.ImageUrl" alt="Current Image" class="w-full h-40 object-cover rounded-md border border-gray-700 mb-2" />
            </div>
        }

        <!-- Upload New Image -->
        <div>
            <label class="text-gray-500 font-medium mb-1">Change Image (optional)</label>
            <input type="file" name="ImageFile" class="w-full mt-2 border border-gray-300 rounded-md px-3 py-1.5 text-white bg-transparent" />
        </div>

        <!-- Submit -->
        <button type="submit" class="w-full py-2 bg-yellow-800 text-white font-semibold rounded-md hover:bg-yellow-700 transition">
            Update Post
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        input[type="datetime-local"]::-webkit-calendar-picker-indicator {
            filter: brightness(0) invert(1);
            opacity: 1;
            cursor: pointer;
        }

        input[type="datetime-local"] {
            color-scheme: dark;
            background-color: #000;
            color: #fff;
        }
    </style>
}
