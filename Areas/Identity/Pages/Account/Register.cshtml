@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-yellow-100 via-white to-yellow-200 px-4 py-12">
    <div class="w-full max-w-md bg-white/90 backdrop-blur-md rounded-2xl shadow-2xl p-8 md:p-10">

        <!-- Logo / Title -->
        <div class="text-center mb-6">
           
            <h2 class="text-2xl font-bold text-yellow-800">Create a New Account</h2>
            <p class="text-sm text-gray-500 mt-1">Join the ZaiEats family today</p>
        </div>

        <!-- Error Summary -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4" role="alert"></div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">


            <div class="relative">
              
                <input asp-for="Input.FullName"  id="fullname"
                class="peer w-full px-4 pt-5 pb-2 border border-gray-300 text-sm placeholder-transparent rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition"
                autocomplete="username" placeholder="Name" />
                <span asp-validation-for="Input.FullName" class="text-danger small"></span>
            </div>
            <!-- Email -->
            <div class="relative">
              
                <input asp-for="Input.Email" id="email"
                       class="peer w-full px-4 pt-5 pb-2 border border-gray-300 text-sm placeholder-transparent rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition"
                       autocomplete="username" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-xs mt-1 block"></span>
            </div>

            <!-- Password -->
            <div class="relative">
                
                <input asp-for="Input.Password" id="password"
                       class="peer w-full px-4 pt-5 pb-2 border border-gray-300 text-sm placeholder-transparent rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition"
                       autocomplete="new-password" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-xs mt-1 block"></span>
            </div>

            <!-- Confirm Password -->
            <div class="relative">
               
                <input asp-for="Input.ConfirmPassword" id="confirmPassword"
                       class="peer w-full px-4 pt-5 pb-2 border border-gray-300 text-sm placeholder-transparent rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition"
                       autocomplete="new-password" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs mt-1 block"></span>
            </div>

            <!-- Submit -->
            <button id="registerSubmit" type="submit"
                    class="w-full py-2 px-4 bg-yellow-800 hover:bg-yellow-700 text-white font-semibold rounded-lg shadow-md transition">
                Register
            </button>
        </form>

        <!-- Login Link -->
        <div class="text-center text-sm mt-6">
            <span class="text-gray-600">Already have an account?</span>
            <a asp-page="/Account/Login" class="text-yellow-800 font-medium hover:underline ml-1">Log in</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
